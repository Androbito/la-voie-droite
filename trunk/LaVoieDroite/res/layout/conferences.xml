<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/basic_fond"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/form"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/back" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" >

                <RelativeLayout
                    android:id="@+id/list"
                    android:layout_width="fill_parent"
                    android:layout_height="122dp"
                    android:background="@android:color/transparent"
                    android:paddingTop="50dp" >

                    <ImageView
                        android:id="@+id/img_acceuil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/home" />

                    <TextView
                        android:id="@+id/txt_acceuil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/img_acceuil"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Acceuil" />

                    <ImageView
                        android:id="@+id/img_rech"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_acceuil"
                        android:paddingLeft="20dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/recherche" />

                    <TextView
                        android:id="@+id/txt_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_rech"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/txt_acceuil"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Search" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="45dp"
                        android:text="ConfÃ©rences" />

                    <ImageView
                        android:id="@+id/img_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_contact"
                        android:src="@drawable/options" />

                    <TextView
                        android:id="@+id/txt_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_options"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@+id/txt_contact"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Options" />

                    <ImageView
                        android:id="@+id/img_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/contact" />

                    <TextView
                        android:id="@+id/txt_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/img_contact"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Contact" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >
            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_options" />
        </LinearLayout>
    </TabHost>

</LinearLayout>